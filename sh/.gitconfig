[alias]
    rc = rebase --continue
    ra = rebase --abort
    ma = merge --abort
    st = status
    ci = commit
    co = checkout
    br = branch
    d = diff
    lg = log -p
    f = fetch
    suck = !git merge origin/$(git config suck.branch)
    sucks = !git rebase origin/$(git config suck.branch)
    l = log
    graph = log --graph --oneline
    rgraph = log --graph --abbrev-commit --decorate --date=relative --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)'
    files = diff-tree --no-commit-id --name-only -r
    undelete = !git checkout $(git rev-list -n 1 HEAD -- "$1")^ -- "$1"

[suck]
    branch = master

[color]
    ui = true

[user]
    name = Max Cantor
    email = max@maxcantor.net

[push]
    default = simple

[merge]
    tool = vimdiff

